{
    "info": {
        "name": "Gym Web Backend - Complete API Testing",
        "description": "Comprehensive testing collection for all API endpoints including Authentication, OTP, Sessions, and Admin functions",
        "version": "1.0.0"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:3000/api"
        },
        {
            "key": "accessToken",
            "value": ""
        },
        {
            "key": "adminToken",
            "value": ""
        },
        {
            "key": "userId",
            "value": ""
        },
        {
            "key": "sessionId",
            "value": ""
        },
        {
            "key": "otpCode",
            "value": ""
        }
    ],
    "item": [
        {
            "name": "üîê Authentication",
            "item": [
                {
                    "name": "Register User",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"name\": \"Test User\",\n    \"email\": \"testuser@example.com\",\n    \"password\": \"TestPassword123!\",\n    \"phone\": \"0123456789\",\n    \"dateOfBirth\": \"1990-01-01\",\n    \"gender\": \"male\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/auth/register",
                            "host": ["{{baseUrl}}"],
                            "path": ["auth", "register"]
                        }
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 201) {",
                                    "    const response = pm.response.json();",
                                    "    pm.collectionVariables.set('accessToken', response.accessToken);",
                                    "    pm.collectionVariables.set('userId', response.user._id);",
                                    "}"
                                ]
                            }
                        }
                    ]
                },
                {
                    "name": "Login User",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"testuser@example.com\",\n    \"password\": \"TestPassword123!\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/auth/login",
                            "host": ["{{baseUrl}}"],
                            "path": ["auth", "login"]
                        }
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    const response = pm.response.json();",
                                    "    pm.collectionVariables.set('accessToken', response.accessToken);",
                                    "}"
                                ]
                            }
                        }
                    ]
                },
                {
                    "name": "Get User Profile",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/auth/profile",
                            "host": ["{{baseUrl}}"],
                            "path": ["auth", "profile"]
                        }
                    }
                }
            ]
        },
        {
            "name": "üîë OTP Password Reset",
            "item": [
                {
                    "name": "Request Password Reset OTP",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"testuser@example.com\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/auth/forgot-password",
                            "host": ["{{baseUrl}}"],
                            "path": ["auth", "forgot-password"]
                        }
                    }
                },
                {
                    "name": "Reset Password with OTP",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"testuser@example.com\",\n    \"otp\": \"{{otpCode}}\",\n    \"newPassword\": \"NewPassword123!\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/auth/reset-password",
                            "host": ["{{baseUrl}}"],
                            "path": ["auth", "reset-password"]
                        }
                    }
                },
                {
                    "name": "Test Invalid OTP",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"testuser@example.com\",\n    \"otp\": \"000000\",\n    \"newPassword\": \"AnotherPassword123!\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/auth/reset-password",
                            "host": ["{{baseUrl}}"],
                            "path": ["auth", "reset-password"]
                        }
                    }
                }
            ]
        },
        {
            "name": "üë§ User Management",
            "item": [
                {
                    "name": "Update User Profile",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"name\": \"Updated Test User\",\n    \"phone\": \"0987654321\",\n    \"dateOfBirth\": \"1992-06-15\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/users/profile",
                            "host": ["{{baseUrl}}"],
                            "path": ["users", "profile"]
                        }
                    }
                },
                {
                    "name": "Change Password",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"currentPassword\": \"NewPassword123!\",\n    \"newPassword\": \"FinalPassword123!\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/users/change-password",
                            "host": ["{{baseUrl}}"],
                            "path": ["users", "change-password"]
                        }
                    }
                }
            ]
        },
        {
            "name": "üèãÔ∏è Workout Sessions",
            "item": [
                {
                    "name": "Create Personal Session",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"notes\": \"Personal cardio and strength training\",\n    \"startTime\": \"2025-08-30T08:00:00.000Z\",\n    \"endTime\": \"2025-08-30T09:00:00.000Z\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/workout-sessions",
                            "host": ["{{baseUrl}}"],
                            "path": ["workout-sessions"]
                        }
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 201) {",
                                    "    const response = pm.response.json();",
                                    "    pm.collectionVariables.set('sessionId', response.data.id);",
                                    "}"
                                ]
                            }
                        }
                    ]
                },
                {
                    "name": "Get Available Sessions",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{baseUrl}}/workout-sessions",
                            "host": ["{{baseUrl}}"],
                            "path": ["workout-sessions"]
                        }
                    }
                },
                {
                    "name": "Update Own Session",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"notes\": \"Updated: Full body workout\",\n    \"startTime\": \"2025-08-30T09:00:00.000Z\",\n    \"endTime\": \"2025-08-30T10:00:00.000Z\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/workout-sessions/{{sessionId}}",
                            "host": ["{{baseUrl}}"],
                            "path": ["workout-sessions", "{{sessionId}}"]
                        }
                    }
                },
                {
                    "name": "Client Delete Own Session",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/workout-sessions/{{sessionId}}/client",
                            "host": ["{{baseUrl}}"],
                            "path": ["workout-sessions", "{{sessionId}}", "client"]
                        }
                    }
                },
                {
                    "name": "Admin Delete Session",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{adminToken}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"reason\": \"Trainer unavailable due to emergency\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/workout-sessions/{{sessionId}}/admin",
                            "host": ["{{baseUrl}}"],
                            "path": ["workout-sessions", "{{sessionId}}", "admin"]
                        }
                    }
                }
            ]
        },
        {
            "name": "üëë Admin Functions",
            "item": [
                {
                    "name": "Get All Users (Admin)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{adminToken}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/admin/users",
                            "host": ["{{baseUrl}}"],
                            "path": ["admin", "users"]
                        }
                    }
                },
                {
                    "name": "Test Client Access Admin (Should Fail)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/admin/users",
                            "host": ["{{baseUrl}}"],
                            "path": ["admin", "users"]
                        }
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test('Should return 403 Forbidden', function () {",
                                    "    pm.response.to.have.status(403);",
                                    "});"
                                ]
                            }
                        }
                    ]
                }
            ]
        },
        {
            "name": "üõ°Ô∏è Security Tests",
            "item": [
                {
                    "name": "Test Invalid Token",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer invalid_token_12345"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/auth/profile",
                            "host": ["{{baseUrl}}"],
                            "path": ["auth", "profile"]
                        }
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test('Should return 401 Unauthorized', function () {",
                                    "    pm.response.to.have.status(401);",
                                    "});"
                                ]
                            }
                        }
                    ]
                },
                {
                    "name": "Test SQL Injection Prevention",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"test@example.com'; DROP TABLE users; --\",\n    \"password\": \"password\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/auth/login",
                            "host": ["{{baseUrl}}"],
                            "path": ["auth", "login"]
                        }
                    }
                }
            ]
        },
        {
            "name": "‚ö° Health Check",
            "request": {
                "method": "GET",
                "url": {
                    "raw": "http://localhost:3000/health",
                    "protocol": "http",
                    "host": ["localhost"],
                    "port": "3000",
                    "path": ["health"]
                }
            }
        }
    ]
}
